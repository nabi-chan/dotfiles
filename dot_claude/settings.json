{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Bash",
      "mcp__ide",
      "mcp__connector-database",
      "mcp__documentation-aws",
      "mcp__documentation-shadcn",
      "mcp__tools-chrome",
      "mcp__tools-figma",
      "mcp__tools-figma-desktop",
      "mcp__tools-pyhub-mcptools",
      "mcp__plugin_context7_context7"
    ],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(chown:*)",
      "Bash(chmod:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "1000000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "1000000"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
