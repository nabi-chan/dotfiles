{
  "permissions": {
    "allow": ["WebSearch", "WebFetch(domain:*)", "Bash(:*:*)", "mcp__*"],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(chown:*)",
      "Bash(chmod:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opusplan",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  }
}
