{
  "permissions": {
    "allow": ["WebSearch", "WebFetch", "Bash(:*:*)", "mcp__*"],
    "deny": [],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(chown:*)",
      "Bash(chmod:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
