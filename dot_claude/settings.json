{
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "1000000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "1000000",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "0"
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Bash",
      "Read(~/.claude-temp/**)",
      "Write(~/.claude-temp/**)",
      "mcp__ide",
      "mcp__connector-database",
      "mcp__documentation-aws",
      "mcp__documentation-shadcn",
      "mcp__tools-chrome",
      "mcp__tools-excalidraw",
      "mcp__tools-pyhub-mcptools",
      "mcp__plugin_context7_context7"
    ],
    "deny": ["Bash(ls:*)", "Bash(cat:*)"],
    "ask": [
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(chown:*)",
      "Bash(chmod:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Funk.aiff"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool == \"Edit\"",
        "hooks": [
          {
            "type": "command",
            "command": "bunx prettier --write \"$CC_TOOL_INPUT_FILE_PATH\" --ignore-unknown"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "language": "Korean",
  "alwaysThinkingEnabled": true,
  "teammateMode": "tmux"
}
