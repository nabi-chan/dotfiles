#!/bin/bash

# claude_desktop_config.json hash: {{ include "Library/Application Support/Claude/claude_desktop_config.json.tmpl" | sha256sum }}

set -e

if ! command -v claude &> /dev/null; then
    echo "Claude CLI not installed, skipping MCP sync"
    exit 0
fi

echo "claude_desktop_config.json 변경 감지, MCP 설정 동기화 중..."
claude mcp add-from-claude-desktop --scope user || {
    echo "MCP 동기화 실패"
    exit 1
}
echo "MCP 설정 동기화 완료"
